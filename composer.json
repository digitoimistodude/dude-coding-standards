{
  "name": "digitoimistodude/dude-coding-standards",
  "description": "Dude Coding Standards (DCS) for WordPress theme and plugin development",
  "keywords": [
    "phpcs",
    "coding-standards",
    "wordpress",
    "dude"
  ],
  "type": "phpcodesniffer-standard",
  "license": "MIT",
  "authors": [
    {
      "name": "Digitoimisto Dude Oy",
      "homepage": "https://www.dude.fi"
    }
  ],
  "require": {
    "php": ">=8.3",
    "squizlabs/php_codesniffer": "^3.13",
    "phpcsstandards/phpcsutils": "^1.0",
    "phpcsstandards/phpcsextra": "^1.2.0",
    "wp-coding-standards/wpcs": "^3.0",
    "phpcompatibility/php-compatibility": "^9.3",
    "phpcompatibility/phpcompatibility-wp": "^2.1",
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0"
  },
  "require-dev": {
    "php-parallel-lint/php-parallel-lint": "^1.3"
  },
  "scripts": {
    "lint": "parallel-lint . -e php --exclude vendor",
    "check-cs": "phpcs",
    "test": [
      "@lint",
      "@check-cs"
    ]
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
